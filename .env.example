# Variáveis principais
APP_ENV=development
APP_NAME=Oraculo ICMS
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Banco de dados
POSTGRES_USER=oraculo
POSTGRES_PASSWORD=oraculo
POSTGRES_DB=oraculo
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://oraculo:oraculo@db:5432/oraculo

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET=changeme-super-secret
JWT_ACCESS_EXPIRES=900
JWT_REFRESH_EXPIRES=604800

# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Armazenamento
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=/data/storage
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=

# Segurança
FERNET_KEY=generate_with_python
RATE_LIMIT_PER_MINUTE=120

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Observabilidade
PROMETHEUS_MULTIPROC_DIR=/tmp

# Feature flags
FEATURE_ZFM_RULES=true
FEATURE_WEBHOOK_OUTBOUND=false
